<div class="container" ng-app="MyWebApp">
    <form id="myForm" method="POST" name="myForm" class="form-horizontal" role="form" ng-controller="LoginController" method="post" action="/login">
        <h2>Login to Account</h2>
        <div class="form-group">
            <label class="col-md-3 control-label" for="textinput">Email address</label>  
            <div class="col-md-9">
            <input id="textinput" name="input" ng-model="emailInput" type="email" placeholder="me@mycompany.com" class="form-control input-md" required>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input type="password" id="pw1" name="password" ng-model="Ppassword" placeholder="Password" class="form-control" required >
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        </div>
        
            </form>
        </div>








